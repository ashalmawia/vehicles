<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VehicleDetails" parent="TextAppearance.AppCompat" />
    <style name="VehicleDetails.Text">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>
    <style name="VehicleDetails.Title" parent="VehicleDetails.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
    </style>

</resources>
